<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.text.Text?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
  fx:controller="com.example.socketclientui.HelloController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
  </padding>
  <Text fx:id="uriInfo" text="URI del socket"/>
  <TextField fx:id="uriSocketTextField"/>

  <Text fx:id="pathInfo" text="Path del socket"/>
  <TextField fx:id="pathSocketTextField"/>

  <Text fx:id="topicsInfo" text="Topicos a escuchar separalos por, ejemplo: messages,notifications,etc."/>
  <TextField fx:id="topicsTextField"/>

  <Label fx:id="welcomeText"/>
  <Button fx:id="buttonConnect" text="Try to connect to socket io" onAction="#onHelloButtonClick"/>
  <TextArea fx:id="notificationsShow" text="Aqui se mostraran las notificaciones"/>
</VBox>
